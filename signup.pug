doctype html
html(lang="en")
  head
    link(rel="stylesheet",href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css",integrity="sha256-Ww++W3rXBfapN8SZitAvc9jw2Xb+Ixt0rvDsmWmQyTo=",crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js",integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=",crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/socket.io-client@2.3.0/dist/socket.io.js",integrity="sha256-bQmrZe4yPnQrLTY+1gYylfNMBuGfnT/HKsCGX+9Xuqo=",crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/crypto-js@4.0.0/crypto-js.min.js")
    script(src="signup.js")
  body.py-5.w-50.mx-auto
    form.flex-fill
      div.mb-3
        label(for="email") Email address
        input.form-control#email(type="email",placeholder="name@example.com",required)
        small.form-text.text-muted#emailInfo We'll never share your email with anyone else.
      div.mb-3
        label(for="name") Full Name
        input.form-control#name(type="text",placeholder="J. Doe",required)
      div.mb-3
        label(for="password") Password
        input.form-control#password(type="password",placeholder="Password",required)
      //div.form-group
      //  div.form-check
      //    input.form-check-input#remember(type="checkbox",value="")
      //    label.form-check-label(for="remember") Remember Me
      div.d-flex
          button.btn.btn-primary.flex-fill(type="submit") Sign Up
