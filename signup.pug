doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible",content="ie=edge")
    meta(name="viewport",content="width=device-width, initial-scale=1.0")
    meta(name="author",content="Tobey Vorus")
    link(rel="stylesheet",href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css",integrity="sha256-93wNFzm2GO3EoByj9rKZCwGjAJAwr0nujPaOgwUt8ZQ=",crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js",integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=",crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/socket.io-client@3.0.3/dist/socket.io.min.js",integrity="sha256-XWbNjAL+l0aYPimukCxoI/339U3AEFXDR3lnrXADLxU=",crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/crypto-js@4.0.0/crypto-js.min.js")
    script(src="/signup.js")
  body.py-5.w-50.mx-auto
    form.flex-fill
      div.mb-3
        label(for="email") Email address
        input.form-control#email(type="email",placeholder="name@example.com",required)
        small.form-text.text-muted#emailInfo We'll never share your email with anyone else.
        p.mt-2.text-danger.d-none#userError A user with this email already exists. 
            a.text-info(href="/login") Login instead
      div.mb-3
        label(for="name") Full Name
        input.form-control#name(type="text",placeholder="J. Doe",required)
      div.mb-3
        label(for="password") Password
        input.form-control#password(type="password",placeholder="Password",required)
      //div.form-group
      //  div.form-check
      //    input.form-check-input#remember(type="checkbox",value="")
      //    label.form-check-label(for="remember") Remember Me
      div.d-flex.flex-column
        button.btn.btn-primary.flex-fill.mb-2(type="submit") Sign Up
        a.btn.btn-danger.flex-fill(href="/") Cancel
